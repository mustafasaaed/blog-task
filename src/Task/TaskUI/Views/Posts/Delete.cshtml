@model TaskUI.Models.ViewModels.PostViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PostViewModel</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Category
        </dt>
        <dd>
            @{
                var categoryName = Model?.Category.Name;
            }
            @Html.DisplayFor(model => categoryName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dd>
            <img src="@Url.Content(Model.ImageUrl)" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>


    </dl>

    @using (Html.BeginForm("DeletePost", "Posts", FormMethod.Post)) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.HiddenFor(m => m.Id)
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
